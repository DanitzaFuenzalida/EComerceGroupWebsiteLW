@page
@model ECommerceSite.Pages.OrderModel
<!--Reference to OrderItem.cs -->
<!--OrderItem.cs fields called directly to be displayed on page-->
<!DOCTYPE html>

<html lang="en">

<head>

    <title>My Profile |  Group4</title>

    <link rel="stylesheet" href="/css/index.css" />

</head>

<body id="page-top">


    <div id="wrapper">
        <!-- NAVBAR -->
        <nav id="navbar" class="navbar">
            <div class="container-fluid">
                <!-- NAVBAR BRAND -->
                <a href="/" class="navbar-brand navitem">
                    <img src="/img/logoWhiteBG.png" alt="Group4 Logo" class="navbar-logo" />
                </a>
                <!-- SITE SEARCH -->
                <div id="nav-search" class="input-group navitem" role="search" onsubmit="return submitFunction();">
                    <input type="text" id="nav-search-input" class="form-control sitefont" placeholder="What are you looking for?" />
                    <span class="input-group-btn">
                        <button id="nav-search-submit" class="btn btn-default btn-submit" type="submit"><img src="/img/goIcon.png" class="nav-go" alt="Search" /></button>
                    </span>
                </div>
                <!-- ACCOUNT LINKS -->
                <div id="nav-profileMain" class="navitem">
                    <a href="/User">
                        <button type="button" class="navbar-profile">
                            <img src="/img/profileIcon.png" alt="My Profile" class="navbar-prof-img" />
                        </button>
                    </a>
                </div>
                <div id="nav-shoppingCart" class="navitem">
                    <a href="/CartPages/ShoppingCart">
                        <button type="button" class="navbar-cart">
                            <img src="/img/cartIcon.png" alt="Shopping Cart" class="navbar-prof-img" />
                        </button>
                    </a>
                </div>
                <ul id="nav-accountLinks" class="navitem">
                    <li id="nav-userProfile" class="dropdown">
                        <a href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img src="/img/menuIcon.png" alt="Account Links" class="navbar-prof-img" /></a>
                        <ul id="nav-userMenu" class="dropdown-menu">
                            <li><a href="/img/goIcon.png" class="sitefont">&nbsp;&nbsp;Your Account</a></li>
                            <li><a href="/img/goIcon.png" class="sitefont">&nbsp;&nbsp;Shopping Cart</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/img/goIcon.png" class="sitefont">&nbsp;&nbsp;Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav><!-- end of NAVBAR -->
        <!-- PAGEBODY -->
        <div id="pagebody">
            <div id="pagecontents">

                <!-- Display the list of products -->
                @if (Model.Orders != null && Model.Orders.Any())
{

                <h2>Order List </h2>
                <h3> --------------------------- </h3>
                <ul>
                    @foreach (var order in Model.Orders)
        {

                    <p><strong>Order ID:</strong> @order.OrderId</p>
                    <p><strong>Order Date:</strong> @order.OrderDate.ToString("dd/MM/yyyy")</p>
                    <p><strong>User ID:</strong> @order.UserId</p>
                    <p><strong>Status:</strong> @order.Status</p>
                    <p><strong>Total Amount:</strong> @order.TotalAmount.ToString("C")</p>

                    <h3>Order Items</h3>
                    <ul>
                        @if (order.OrderItems == null)
                    {
                        <li><strong>No Order Items Found</strong></li>
                    }
                    else {
                        @foreach (var item in order.OrderItems)
                        {
                        <li>
                            Order Item ID: @item.OrderItemId,
                            Product ID: @item.ProductId,
                            Quantity: @item.Quantity,
                            Unit Price: @item.UnitPrice.ToString("C")
                        </li>
                        }
                    }
                    </ul>
        }
                </ul>
}


            </div>
            <!-- Product creation form -->
            <form method="post">
                <div>
                    <h2>Add a new Order </h2>
                    <h3> --------------------------- </h3>
                    <br />
                    <label asp-for="Order.OrderDate"></label>
                    <input asp-for="Order.OrderDate" />
                    <span asp-validation-for="Order.OrderDate"></span>

                    <br />
                    <label asp-for="Order.UserId"></label>
                    <input asp-for="Order.UserId" />
                    <span asp-validation-for="Order.UserId"></span>

                    <br />
                    <label asp-for="Order.Status"></label>
                    <input asp-for="Order.Status" />
                    <span asp-validation-for="Order.Status"></span>

                    <br />
                    <label asp-for="Order.TotalAmount"></label>
                    <input asp-for="Order.TotalAmount" />
                    <span asp-validation-for="Order.TotalAmount"></span>
                </div>

                <!-- Add other input fields as needed -->

                <button type="submit">Create Order</button>
            </form>
        </div>
        <!-- END OF PAGEBODY -->
        <!-- FOOTER -->
        <footer id="footer" class="footer-blue">
            <div class="container">
                <!-- LOGO -->
                <div id="logo-col" class="col-xs-12">
                    <a href="/">
                        <img src="/img/logoTransparent.png" alt="Group4 Logo" class="footer-logo" />
                    </a>
                </div>
                <!-- SITELINKS -->
                <div id="sitelinks" class="sitefont footer-cols">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <ul class="list-unstyled">
                            <li><a href="/img/goIcon.png">About</a></li>
                            <li><a href="/img/goIcon.png">Contact&nbsp;Us</a></li>
                            <li><a href="/img/goIcon.png">Careers</a></li>
                            <li><a href="/img/goIcon.png">Help</a></li>
                            <li><a href="/img/goIcon.png">FAQ</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <ul class="list-unstyled">
                            <li><a href="/img/goIcon.png">Enterprising</a></li>
                            <li><a href="/img/goIcon.png">Store&nbsp;Finder</a></li>
                            <li><a href="/img/goIcon.png">Official&nbsp;Partners</a></li>
                            <li><a href="/img/goIcon.png">Warehousing</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <ul class="list-unstyled">
                            <li><a href="/img/goIcon.png">Customer&nbsp;Service</a></li>
                            <li><a href="/img/goIcon.png">My&nbsp;Orders</a></li>
                            <li><a href="/img/goIcon.png">Return&nbsp;Policy</a></li>
                            <li><a href="/img/goIcon.png">Warranties</a></li>
                            <li><a href="/img/goIcon.png">Feedback</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <ul class="list-unstyled">
                            <li><a href="/img/goIcon.png">Privacy&nbsp;Policy</a></li>
                            <li><a href="/img/goIcon.png">Terms &amp; Conditions</a></li>
                            <li><a href="/img/goIcon.png">Product&nbsp;Registration</a></li>
                            <li><a href="/img/goIcon.png">Security</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer><!-- end of FOOTER -->
    </div>
</body>
</html>